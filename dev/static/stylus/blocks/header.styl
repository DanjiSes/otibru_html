.main
  padding 80px 0 
  background-image linear-gradient( -146deg, #f38439 0%, #ef4a32 99%)
  position relative

  &:after
    content ''
    display block
    width 100%
    position absolute

  &__submenu
    padding 5px
    color #fff
    
    a
      color #fff
    
    img
      width 20px
      height 20px
    
    .links
      text-align right
      
      a
        margin 0 5px
        vertical-align middle
    
    .lang_link
      text-decoration underline        
  
  &__header
    border-top 1px solid #fff
    border-bottom 1px solid #fff
  
  &__nav
    display flex
    justify-content space-around
    font-size 18px
    
    li
      padding 10px
    
    a
      color #fff
      font-weight 500

.product
  padding 70px 0
  color #fff
  
  &__title
    margin 0 0 25px -35px
  
  &__name
    text-transform uppercase
    font-size rem(72)
  
  &__desc
    text-transform uppercase
    font-weight 700
    font-size rem(30)
  
  &__sub
    font-size rem(18)
  
  &__list
    margin 0 0 25px 0
  
  &__item
    position relative
    margin 0 0 15px 0
    padding 0 0 0 35px
    
    &:after
      content ''
      position absolute
      left 0
      top 50%
      margin -19px 0 0 0
      display block
      width 24px
      height 27px
      background url(../img/check.svg)
      background-size contain
      background-repeat no-repeat
    
    &:last-child
      margin 0
    
.nav
  z-index 22
  padding-top 100px
  
  &__list
    display flex
    justify-content space-around
    text-align center
  
  &__item
    padding 0 15px
    font-weight 500
    cursor pointer
    color #000
    position relative
    z-index 11
    
    img
      width 99px
      height auto
      margin 0 0 15px 0
    
    &:last-child, &:first-child
      margin -70px 0 0 0
    
    &:nth-child(2), &:nth-child(4)
      margin -20px 0 0 0

.ills
  padding  px 0
  
  &__list
