.brochure
  background url(../img/green.png)
  color #fff
  
  &__title
    font-size rem(36)
    display inline-block
    position relative
    
    &:after
      content ''
      display block
      position absolute
      top 50px
      right 0
      width 100px
      height 100px
      transform translateX(100%)
      background url(../img/arrow2.png)
      background-size 100%
      background-repeat no-repeat
  
  &__list
    text-align center
    
    .img
      margin 0 0 15px 0
    
    a
      color #fff
      text-decoration underline

.video
  padding 100px 0
  background #f6905b
  color #fff
  line-height 1
  font-weight 500
  font-style italic
  
  &__preview
    position relative
    cursor pointer
    
    &:hover
      
      &:after
        opacity 1
    
    &:after
      content ''
      display block
      position absolute
      z-index 10
      left 50%
      top 50%
      width 110px
      height 80px
      margin -40px 0 0 -55px 
      background url(../img/play.png)
      background-size contain
      background-repeat no-repeat
      opacity .4
      transition opacity .5s
    
    iframe
      position absolute
      z-index 20
      max-width 90%
      max-height 90%
      left 50%
      top 50%
      transform translate(-50%, -50%)
      display none
    
    &.activ
      
      &:after
        opacity 0

      iframe
        display block
  
  &__arrow
    font-size rem(30)
    position relative
    margin-top -200px
    
    &:after
      content ''
      position absolute
      top 140%
      display block
      width 70%
      height 170px
      background-image url(../img/arrow.png)
      background-size contain
      background-repeat no-repeat
  
  &__reverse
    background url(../img/green.png)
    
    .row
      flex-direction row-reverse
    
    .video__arrow:after
      background-image url(../img/arrow2.png)

