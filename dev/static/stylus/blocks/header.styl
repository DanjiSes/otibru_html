  &__item
    padding 40px 15px 40px 90px
    font-weight 500
    
    &:after
      position absolute
      left 0
      top 50%
      margin -42px 0 0 0
      content ''
      display block
      width 84px
      height 84px
      background url(../img/ear.png)
      background-size cover
